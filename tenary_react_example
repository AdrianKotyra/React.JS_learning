import React from 'react';
import ReactDOM from 'react-dom';
// import App from './App';


function YesorNO(){
    const [isGoingOut, SetisGoingOut] = React.useState(true)

    function Changeit() {
        SetisGoingOut(previousstate => !previousstate)
        
    }

    return(
        <div className='state'>
            <h1 className='state--title' onClick ={Changeit}> Do I feel like going out tonight?</h1>
            <div className='state--value'>
                <h1>{isGoingOut? "yes": "no"}</h1>
            </div>

            
        </div>


    )
}

   
ReactDOM.render(<YesorNO/>, document.getElementById("meme_content"))
